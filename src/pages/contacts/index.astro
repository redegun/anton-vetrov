---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';
---

<BaseLayout title="Контакты | Антон Ветров" description="Свяжитесь со мной для обсуждения проекта">
  <div class="container" style="padding: var(--space-12) 0 var(--space-20);">
    <h1>Контакты</h1>
    <p style="color: var(--color-text-secondary); max-width: 560px; margin-bottom: var(--space-8);">
      Готов обсудить ваш проект. Выберите удобный способ связи.
    </p>
    
    <div class="contact-grid">
      <a href="https://t.me/antonneprosto" target="_blank" rel="noopener" class="card contact-card card-link">
        <div class="contact-icon">
          <Icon name="send" size={28} />
        </div>
        <h3>Telegram</h3>
        <p>@antonneprosto</p>
      </a>
      
      <a href="mailto:hello@antonvetrov.ru" class="card contact-card card-link">
        <div class="contact-icon">
          <Icon name="mail" size={28} />
        </div>
        <h3>Email</h3>
        <p>hello@antonvetrov.ru</p>
      </a>
    </div>
    
    <div class="contact-info">
      <div class="info-item">
        <Icon name="map-pin" size={18} />
        <span>Москва, Россия</span>
      </div>
      <div class="info-item">
        <Icon name="clock" size={18} />
        <span>Отвечаю в рабочее время (10:00–19:00 МСК)</span>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .contact-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-subtle);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-3);
    color: var(--color-accent);
  }
  
  .contact-info {
    margin-top: var(--space-12);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .info-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }
</style>
