---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categories = [...new Set(posts.map(post => post.data.category))];

const formatDate = (date: Date) => {
  return date.toLocaleDateString('ru-RU', {
    day: 'numeric',
    month: 'short'
  }).replace('.', '');
};
---

<BaseLayout title="Блог | Антон Ветров" description="Статьи о разработке, SEO, полезных сервисах и инструментах">
  <div class="container" style="padding: var(--space-12) 0 var(--space-20);">
    <h1>Блог</h1>
    <p style="color: var(--color-text-secondary); margin-bottom: var(--space-8);">
      Пишу о разработке, SEO, полезных сервисах и инструментах.
    </p>
    
    {categories.length > 0 && (
      <div style="display: flex; gap: var(--space-2); flex-wrap: wrap; margin-bottom: var(--space-8);">
        <a href="/blog/" class="btn btn-secondary" style="padding: var(--space-2) var(--space-4); font-size: var(--text-xs);">
          Все
        </a>
        {categories.map(cat => (
          <a href={`/blog/category/${cat.toLowerCase()}/`} class="btn btn-secondary" style="padding: var(--space-2) var(--space-4); font-size: var(--text-xs);">
            {cat}
          </a>
        ))}
      </div>
    )}
    
    <div class="blog-list">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}/`} class="card blog-card card-link">
          <div class="blog-meta">
            <span>{formatDate(post.data.pubDate)}</span>
            <span class="separator"></span>
            <span class="category-badge">{post.data.category}</span>
          </div>
          <h3>{post.data.title}</h3>
          <p class="blog-excerpt">{post.data.description}</p>
        </a>
      ))}
    </div>
    
    {posts.length === 0 && (
      <div class="card" style="text-align: center; padding: var(--space-12);">
        <p style="margin: 0; color: var(--color-text-muted);">Статьи скоро появятся...</p>
      </div>
    )}
  </div>
</BaseLayout>
