---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get unique categories
const categories = [...new Set(posts.map(post => post.data.category))];
---

<BaseLayout title="Блог | Антон Ветров" description="Статьи о разработке, SEO, полезных сервисах и инструментах">
  <div class="container" style="padding: 2rem 0 4rem;">
    <h1>Блог</h1>
    <p style="color: var(--color-text-muted); margin-bottom: 2rem;">
      Пишу о разработке, SEO, полезных сервисах и инструментах.
    </p>
    
    {categories.length > 0 && (
      <div style="margin-bottom: 2rem; display: flex; gap: 0.75rem; flex-wrap: wrap;">
        <a href="/blog/" class="card" style="padding: 0.5rem 1rem; font-size: 0.9rem;">Все</a>
        {categories.map(cat => (
          <a href={`/blog/category/${cat.toLowerCase()}/`} class="card" style="padding: 0.5rem 1rem; font-size: 0.9rem;">
            {cat}
          </a>
        ))}
      </div>
    )}
    
    <div class="blog-list">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}/`} class="card blog-card">
          <div class="blog-meta">
            {post.data.pubDate.toLocaleDateString('ru-RU')} • {post.data.category}
          </div>
          <h3>{post.data.title}</h3>
          <p class="blog-excerpt">{post.data.description}</p>
        </a>
      ))}
    </div>
    
    {posts.length === 0 && (
      <p style="color: var(--color-text-muted);">Статьи скоро появятся...</p>
    )}
  </div>
</BaseLayout>
