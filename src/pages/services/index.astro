---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';

const serviceGroups = [
  {
    title: "Разработка сайтов",
    icon: "code",
    description: "Создаю сайты любой сложности — от одностраничника до интернет-магазина. Под ключ, с гарантией.",
    link: "/services/razrabotka-sajtov/",
    price: "от 90 000 ₽",
    children: [
      { title: "Лендинги", price: "от 90 000 ₽", link: "/services/landing/", description: "Продающие одностраничники с фокусом на конверсию" },
      { title: "Корпоративные сайты", price: "от 160 000 ₽", link: "/services/korporativnyj-sajt/", description: "Многостраничные сайты для компаний" },
      { title: "Интернет-магазины", price: "от 300 000 ₽", link: "/services/internet-magazin/", description: "Каталог, корзина, оплата, интеграция с 1С" },
    ]
  },
  {
    title: "SEO-продвижение",
    icon: "search",
    description: "Вывожу сайты в топ поисковых систем. Комплексная работа: аудит, оптимизация, контент, ссылки.",
    link: "/services/seo-prodvizhenie/",
    price: "от 50 000 ₽/мес",
    children: []
  },
  {
    title: "Техподдержка сайтов",
    icon: "settings",
    description: "Обновления, безопасность, резервные копии, мелкие доработки. Чтобы сайт работал без сбоев.",
    link: "/services/podderzhka-sajtov/",
    price: "от 20 000 ₽/мес",
    children: []
  }
];
---

<BaseLayout title="Услуги | Антон Ветров" description="Разработка сайтов, SEO-продвижение, техническая поддержка — цены и условия">
  <div class="container" style="padding-top: var(--space-12); padding-bottom: var(--space-20);">
    <h1>Услуги</h1>
    <p class="page-description">
      Полный цикл: от дизайна до продвижения. Работаю на результат — сайт должен приносить клиентов.
    </p>
    
    <div class="services-catalog">
      {serviceGroups.map(group => (
        <div class="service-group">
          <a href={group.link} class="service-group-header card">
            <div class="service-group-info">
              <div class="service-group-icon">
                <Icon name={group.icon} size={24} />
              </div>
              <div>
                <h2>{group.title}</h2>
                <p>{group.description}</p>
              </div>
            </div>
            <span class="service-group-price">{group.price}</span>
          </a>
          
          {group.children.length > 0 && (
            <div class="service-children">
              {group.children.map(child => (
                <a href={child.link} class="service-child card card-link">
                  <div>
                    <h3>{child.title}</h3>
                    <p>{child.description}</p>
                  </div>
                  <span class="service-child-price">{child.price}</span>
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="cta-section">
      <h2>Не нашли подходящую услугу?</h2>
      <p>Напишите мне — обсудим вашу задачу и найдём решение.</p>
      <a href="https://t.me/antonneprosto" target="_blank" rel="noopener" class="btn btn-primary">
        Написать в Telegram
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .page-description {
    color: var(--color-text-secondary);
    max-width: 560px;
    margin-bottom: var(--space-10);
  }

  .services-catalog {
    display: grid;
    gap: var(--space-6);
  }

  .service-group-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-decoration: none;
    color: inherit;
    gap: var(--space-4);
  }

  .service-group-header:hover {
    color: inherit;
  }

  .service-group-info {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
  }

  .service-group-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent-subtle);
    border-radius: var(--radius-md);
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .service-group-header h2 {
    font-size: var(--text-xl);
    margin: 0 0 var(--space-1);
  }

  .service-group-header p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .service-group-price {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-accent);
    white-space: nowrap;
  }

  .service-children {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-3);
    margin-top: var(--space-3);
    padding-left: var(--space-8);
  }

  @media (max-width: 768px) {
    .service-children {
      grid-template-columns: 1fr;
      padding-left: var(--space-4);
    }
    
    .service-group-header {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .service-group-price {
      margin-left: calc(48px + var(--space-4));
    }
  }

  .service-child {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: var(--space-3);
    padding: var(--space-4);
    border-left: 2px solid var(--color-border);
  }

  .service-child:hover {
    border-left-color: var(--color-accent);
  }

  .service-child h3 {
    font-size: var(--text-base);
    margin: 0 0 var(--space-1);
  }

  .service-child p {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin: 0;
  }

  .service-child-price {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
  }
</style>
