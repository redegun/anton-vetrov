---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';

const serviceGroups = [
  {
    title: "Разработка сайтов",
    icon: "code",
    description: "Создаю сайты любой сложности — от одностраничника до интернет-магазина. Под ключ, с гарантией.",
    link: "/services/razrabotka-sajtov/",
    price: "от 90 000 ₽",
    features: ["Уникальный дизайн", "Адаптивная вёрстка", "CMS с админкой", "SEO-оптимизация"],
    children: [
      { title: "Лендинги", price: "от 90 000 ₽", link: "/services/landing/", description: "Продающие одностраничники с фокусом на конверсию", features: ["Адаптивный дизайн", "Формы захвата", "Интеграция с CRM", "Аналитика"] },
      { title: "Корпоративные сайты", price: "от 160 000 ₽", link: "/services/korporativnyj-sajt/", description: "Многостраничные сайты для компаний", features: ["До 15 страниц", "Уникальный дизайн", "Админ-панель", "SEO-оптимизация"] },
      { title: "Интернет-магазины", price: "от 300 000 ₽", link: "/services/internet-magazin/", description: "Каталог, корзина, оплата, интеграция с 1С", features: ["Каталог и фильтры", "Корзина и оплата", "Интеграция с 1С", "Личный кабинет"] },
    ]
  },
  {
    title: "SEO-продвижение",
    icon: "search",
    description: "Вывожу сайты в топ поисковых систем. Комплексная работа: аудит, оптимизация, контент, ссылки.",
    link: "/services/seo-prodvizhenie/",
    price: "от 50 000 ₽/мес",
    features: ["SEO-аудит", "Оптимизация контента", "Наращивание ссылок", "Ежемесячные отчёты"],
    children: []
  },
  {
    title: "Техподдержка сайтов",
    icon: "settings",
    description: "Обновления, безопасность, резервные копии, мелкие доработки. Чтобы сайт работал без сбоев.",
    link: "/services/podderzhka-sajtov/",
    price: "от 20 000 ₽/мес",
    features: ["Обновления CMS", "Резервные копии", "Мониторинг", "Мелкие доработки"],
    children: []
  }
];
---

<BaseLayout title="Услуги | Антон Ветров" description="Разработка сайтов, SEO-продвижение, техническая поддержка — цены и условия">
  <div class="container" style="padding-top: var(--space-12); padding-bottom: var(--space-20);">
    <h1>Услуги</h1>
    <p class="page-description">
      Полный цикл: от дизайна до продвижения. Работаю на результат —
      сайт должен приносить клиентов.
    </p>
    
    <div class="services-catalog">
      {serviceGroups.map(group => (
        <div class="service-group">
          <div class="service-group-card card">
            <div class="service-group-top">
              <div class="service-group-icon">
                <Icon name={group.icon} size={24} />
              </div>
              <div class="service-group-info">
                <h2><a href={group.link}>{group.title}</a></h2>
                <p class="service-group-desc">{group.description}</p>
                <ul class="service-group-features">
                  {group.features.map(f => (
                    <li>✓ {f}</li>
                  ))}
                </ul>
              </div>
            </div>
            <div class="service-group-bottom">
              <span class="service-group-price">{group.price}</span>
              <a href={group.link} class="btn btn-secondary">Подробнее</a>
            </div>
          </div>
          
          {group.children.length > 0 && (
            <div class="service-children">
              {group.children.map(child => (
                <a href={child.link} class="service-child card card-link">
                  <h3>{child.title}</h3>
                  <p class="service-child-desc">{child.description}</p>
                  <ul class="service-child-features">
                    {child.features.map(f => (
                      <li>✓ {f}</li>
                    ))}
                  </ul>
                  <div class="service-child-footer">
                    <span class="service-child-price">{child.price}</span>
                    <span class="btn btn-secondary btn-sm">Заказать</span>
                  </div>
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
    
    <div class="cta-section">
      <h2>Не нашли подходящую услугу?</h2>
      <p>Напишите мне — обсудим вашу задачу и найдём решение.</p>
      <a href="https://t.me/antonneprosto" target="_blank" rel="noopener" class="btn btn-primary">
        Написать в Telegram
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .page-description {
    color: var(--color-text-secondary);
    max-width: 560px;
    margin-bottom: var(--space-10);
  }

  .services-catalog {
    display: grid;
    gap: var(--space-6);
  }

  /* Group card */
  .service-group-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .service-group-top {
    display: flex;
    gap: var(--space-4);
  }

  .service-group-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent-subtle);
    border-radius: var(--radius-md);
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .service-group-info {
    flex: 1;
  }

  .service-group-info h2 {
    font-size: var(--text-xl);
    margin: 0 0 var(--space-2);
  }

  .service-group-info h2 a {
    color: var(--color-text);
    text-decoration: none;
  }

  .service-group-info h2 a:hover {
    color: var(--color-accent);
  }

  .service-group-desc {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0 0 var(--space-4);
  }

  .service-group-features {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2) var(--space-6);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-group-features li {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .service-group-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .service-group-price {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
  }

  /* Children */
  .service-children {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-3);
    margin-top: var(--space-3);
  }

  @media (max-width: 768px) {
    .service-children {
      grid-template-columns: 1fr;
    }
  }

  .service-child {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .service-child h3 {
    font-size: var(--text-base);
    margin: 0;
  }

  .service-child-desc {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin: 0;
  }

  .service-child-features {
    list-style: none;
    padding: 0;
    margin: 0;
    flex: 1;
  }

  .service-child-features li {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    padding: var(--space-1) 0;
  }

  .service-child-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }

  .service-child-price {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-text);
  }

  .btn-sm {
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-xs);
  }
</style>
