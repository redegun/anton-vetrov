---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';

const services = [
  {
    title: 'Разработка сайтов',
    description: 'Создание сайтов на MODX, Astro, Next.js. От лендингов до сложных веб-приложений.',
    icon: 'monitor'
  },
  {
    title: 'SEO-продвижение',
    description: 'Аудит, оптимизация, продвижение в поисковых системах. Больше клиентов из органики.',
    icon: 'trending-up'
  },
  {
    title: 'Техническая поддержка',
    description: 'Поддержка и доработка существующих сайтов. Обновление, безопасность, оптимизация.',
    icon: 'settings'
  },
  {
    title: 'Автоматизация',
    description: 'Интеграция с CRM, настройка отчётов, боты и скрипты для автоматизации бизнеса.',
    icon: 'bot'
  }
];
---

<BaseLayout title="Услуги | Антон Ветров" description="Разработка сайтов, SEO-продвижение, техническая поддержка">
  <div class="container" style="padding: var(--space-12) 0 var(--space-20);">
    <h1>Услуги</h1>
    <p style="color: var(--color-text-secondary); max-width: 560px; margin-bottom: 0;">
      Помогаю бизнесу получать клиентов из интернета. Разрабатываю сайты, продвигаю в поиске, автоматизирую процессы.
    </p>
    
    <div class="services-grid">
      {services.map(service => (
        <div class="card service-card">
          <div class="service-icon">
            <Icon name={service.icon} size={32} />
          </div>
          <h3>{service.title}</h3>
          <p>{service.description}</p>
        </div>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="cta-section">
      <h2>Обсудим проект?</h2>
      <p>
        Напишите мне в Telegram, расскажите о задаче — обсудим детали и сроки.
      </p>
      <a href="https://t.me/antonneprosto" target="_blank" rel="noopener" class="btn btn-primary">
        <Icon name="send" size={16} />
        Написать в Telegram
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .service-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-subtle);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-4);
    color: var(--color-accent);
  }
</style>
