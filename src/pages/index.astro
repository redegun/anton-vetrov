---
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';
import ProfessionalServiceSchema from '../components/ProfessionalServiceSchema.astro';
import PersonSchema from '../components/PersonSchema.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('ru-RU', {
    day: 'numeric',
    month: 'short'
  }).replace('.', '');
};

const services = [
  {
    title: 'Лендинги',
    description: 'Продающие одностраничники с высокой конверсией',
    icon: 'zap',
    price: 'от 90 000 ₽'
  },
  {
    title: 'Корпоративные сайты',
    description: 'Многостраничные сайты для бизнеса',
    icon: 'layers',
    price: 'от 160 000 ₽'
  },
  {
    title: 'Интернет-магазины',
    description: 'Каталоги с корзиной и оплатой',
    icon: 'globe',
    price: 'от 300 000 ₽'
  },
  {
    title: 'SEO-продвижение',
    description: 'Вывод сайта в топ поисковиков',
    icon: 'trending-up',
    price: 'от 50 000 ₽/мес'
  }
];

const portfolio = [
  {
    name: 'Vinyl TM',
    url: 'https://vinyl-tm.ru',
    description: 'Оклейка авто плёнкой и брендирование транспорта',
    image: '/images/portfolio/vinyl-tm.png'
  },
  {
    name: 'Gitwell',
    url: 'https://gitwell.ru',
    description: 'Интернет-магазин корпоративных подарков',
    image: '/images/portfolio/gitwell.png'
  },
  {
    name: 'КППФ',
    url: 'https://kppf.ru',
    description: 'Защитная антигравийная плёнка',
    image: '/images/portfolio/kppf.png'
  }
];
---

<BaseLayout title="Антон Ветров — разработка сайтов и SEO">
  <ProfessionalServiceSchema />
  <PersonSchema />
  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <div class="hero-badge">
        <Icon name="sparkles" size={14} />
        <span>15+ лет в веб-разработке</span>
      </div>
      <h1>Создаю сайты,<br/>которые работают</h1>
      <p>
        Разработка сайтов под ключ и SEO-продвижение. 
        От лендинга до интернет-магазина. Быстро, качественно, с гарантией.
      </p>
      <div class="hero-actions">
        <a href="https://t.me/antonneprosto" target="_blank" class="btn btn-primary">
          Обсудить проект
          <Icon name="arrow-right" size={16} />
        </a>
        <a href={`${base}services/`} class="btn btn-secondary">
          Услуги и цены
        </a>
      </div>
    </div>
  </section>
  
  <!-- Services -->
  <section class="container section">
    <div class="section-header">
      <h2>Услуги</h2>
      <a href={`${base}services/`} class="section-link">
        Все услуги
        <Icon name="arrow-right" size={16} />
      </a>
    </div>
    <div class="services-grid-home">
      {services.map(service => (
        <div class="card service-card-home">
          <div class="service-icon-home">
            <Icon name={service.icon} size={24} />
          </div>
          <div class="service-content">
            <h3>{service.title}</h3>
            <p>{service.description}</p>
            <span class="service-price">{service.price}</span>
          </div>
        </div>
      ))}
    </div>
  </section>
  
  <!-- Why me -->
  <section class="container section">
    <h2 style="text-align: center;">Почему я</h2>
    <div class="features-grid">
      <div class="feature">
        <div class="feature-number">15+</div>
        <div class="feature-text">лет опыта в разработке</div>
      </div>
      <div class="feature">
        <div class="feature-number">200+</div>
        <div class="feature-text">реализованных проектов</div>
      </div>
      <div class="feature">
        <div class="feature-number">50+</div>
        <div class="feature-text">сайтов в топ-10 Яндекса</div>
      </div>
      <div class="feature">
        <div class="feature-number">24/7</div>
        <div class="feature-text">поддержка клиентов</div>
      </div>
    </div>
  </section>
  
  <!-- Portfolio -->
  <section class="container section">
    <div class="section-header">
      <h2>Портфолио</h2>
      <a href={`${base}portfolio/`} class="section-link">
        Все работы
        <Icon name="arrow-right" size={16} />
      </a>
    </div>
    <div class="portfolio-grid-home">
      {portfolio.map((project) => (
        <a href={project.url} target="_blank" rel="noopener" class="portfolio-card-home">
          <div class="portfolio-image-home">
            <img src={project.image} alt={project.name} loading="lazy" decoding="async" />
          </div>
          <div class="portfolio-info-home">
            <h3>{project.name}</h3>
            <p>{project.description}</p>
          </div>
        </a>
      ))}
    </div>
  </section>
  
  <!-- Blog -->
  <section class="container section">
    <div class="section-header">
      <h2>Блог</h2>
      <a href={`${base}blog/`} class="section-link">
        Все статьи
        <Icon name="arrow-right" size={16} />
      </a>
    </div>
    <div class="blog-list">
      {posts.map((post) => (
        <a href={`${base}blog/${post.slug}/`} class="card blog-card card-link">
          <div class="blog-meta">
            <span>{formatDate(post.data.pubDate)}</span>
            <span class="separator"></span>
            <span class="category-badge">{post.data.category}</span>
          </div>
          <h3>{post.data.title}</h3>
          <p class="blog-excerpt">{post.data.description}</p>
        </a>
      ))}
    </div>
    {posts.length === 0 && (
      <div class="card" style="text-align: center; padding: var(--space-12);">
        <p style="margin: 0; color: var(--color-text-muted);">Статьи скоро появятся...</p>
      </div>
    )}
  </section>
  
  <!-- CTA -->
  <section class="container section">
    <div class="cta-section">
      <h2>Готовы начать проект?</h2>
      <p>
        Напишите мне — обсудим задачу, сроки и стоимость. Консультация бесплатно.
      </p>
      <a href="https://t.me/antonneprosto" target="_blank" class="btn btn-primary">
        <Icon name="send" size={16} />
        Написать в Telegram
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--gradient-subtle);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--color-accent);
    margin-bottom: var(--space-6);
  }
  
  .section {
    padding: var(--space-16) 0;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-8);
  }
  
  .section-header h2 {
    margin: 0;
  }
  
  .section-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .section-link:hover {
    color: var(--color-accent);
  }
  
  .services-grid-home {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
  }
  
  @media (max-width: 768px) {
    .services-grid-home {
      grid-template-columns: 1fr;
    }
  }
  
  .service-card-home {
    display: flex;
    gap: var(--space-4);
    align-items: flex-start;
  }
  
  .service-icon-home {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-subtle);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    flex-shrink: 0;
  }
  
  .service-content h3 {
    margin: 0 0 var(--space-1);
    font-size: var(--text-base);
  }
  
  .service-content p {
    margin: 0 0 var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .service-price {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    margin-top: var(--space-8);
  }
  
  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  .feature {
    text-align: center;
  }
  
  .feature-number {
    font-size: var(--text-4xl);
    font-weight: 700;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: var(--space-2);
  }
  
  .feature-text {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .portfolio-grid-home {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }
  
  @media (max-width: 768px) {
    .portfolio-grid-home {
      grid-template-columns: 1fr;
    }
  }
  
  .portfolio-card-home {
    display: block;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
    text-decoration: none;
    color: inherit;
  }
  
  .portfolio-card-home:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .portfolio-image-home {
    aspect-ratio: 16/9;
    overflow: hidden;
  }
  
  .portfolio-image-home img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }
  
  .portfolio-card-home:hover .portfolio-image-home img {
    transform: scale(1.02);
  }
  
  .portfolio-info-home {
    padding: var(--space-4);
  }
  
  .portfolio-info-home h3 {
    margin: 0 0 var(--space-1);
    font-size: var(--text-base);
    color: var(--color-text);
  }
  
  .portfolio-info-home p {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
</style>
