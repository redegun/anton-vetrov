---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Антон Ветров — разработка сайтов, SEO-продвижение', image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="canonical" href={canonicalURL} />
  
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  {image && <meta property="og:image" content={new URL(image, Astro.site)} />}
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  {image && <meta property="twitter:image" content={new URL(image, Astro.site)} />}
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Theme color -->
  <meta name="theme-color" content="#09090b" />
</head>
<body>
  <header class="header">
    <div class="container header-inner">
      <a href={base} class="logo">Антон Ветров</a>
      <nav class="nav">
        <a href={base}>Главная</a>
        <a href={`${base}services/`}>Услуги</a>
        <a href={`${base}blog/`}>Блог</a>
        <a href={`${base}contacts/`}>Контакты</a>
      </nav>
    </div>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer class="footer">
    <div class="container">
      <p>© {new Date().getFullYear()} Антон Ветров. Все права защищены.</p>
    </div>
  </footer>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
