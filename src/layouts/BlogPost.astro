---
import BaseLayout from './BaseLayout.astro';
import { categoryToSlug } from '../utils/slugify';
import TOC from '../components/TOC.astro';
import Author from '../components/Author.astro';
import RelatedPosts from '../components/RelatedPosts.astro';
import ArticleSchema from '../components/ArticleSchema.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const base = import.meta.env.BASE_URL;

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  category: string;
  author: string;
  headings: { depth: number; slug: string; text: string }[];
  slug: string;
}

const { title, description, pubDate, updatedDate, heroImage, category, author, headings, slug } = Astro.props;

// Reading time estimate
const rawContent = await Astro.slots.render('default');
const textContent = rawContent.replace(/<[^>]*>/g, '');
const wordCount = textContent.trim().split(/\s+/).length;
const readingTime = Math.max(1, Math.round(wordCount / 200));

const formatDate = (date: Date) => {
  return date.toLocaleDateString('ru-RU', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout title={`${title} | Антон Ветров`} description={description} image={heroImage}>
  <ArticleSchema 
    title={title}
    description={description}
    pubDate={pubDate}
    updatedDate={updatedDate}
    author={author}
    image={heroImage}
    url={Astro.url.href}
  />
  
  <article class="container article-layout" style="padding-top: var(--space-12); padding-bottom: var(--space-20);">
    <div class="content">
      <!-- Breadcrumbs -->
      <Breadcrumbs items={[
        { label: "Главная", href: "/" },
        { label: "Блог", href: "/blog/" },
        { label: category, href: `/blog/category/${categoryToSlug(category)}/` },
        { label: title }
      ]} />
      
      <!-- Header -->
      <header class="article-header">
        <div class="blog-meta">
          <span>{formatDate(pubDate)}</span>
          <span class="separator"></span>
          <a href={`${base}blog/category/${categoryToSlug(category)}/`} class="category-badge">{category}</a>
          <span class="separator"></span>
          <span>{readingTime} мин чтения</span>
          <span class="separator"></span>
          <span class="views-counter" data-slug={`blog/${slug}`}>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
            <span class="views-count">—</span>
          </span>
        </div>
        <h1>{title}</h1>
        <p class="article-description">{description}</p>
      </header>
      
      <!-- Hero image -->
      {heroImage && (
        <img 
          src={heroImage} 
          alt={title} 
          class="article-hero"
          loading="lazy"
          decoding="async"
        />
      )}
      
      <!-- TOC mobile only -->
      <div class="toc-mobile">
        <TOC headings={headings} />
      </div>
      
      <!-- Content -->
      <div class="prose">
        <slot />
      </div>
      
      <!-- Author -->
      <Author name={author} />
      
      <!-- Related posts -->
      <RelatedPosts currentSlug={slug} category={category} />
    </div>
    
    <!-- Sidebar TOC desktop -->
    <aside class="toc-sidebar">
      <TOC headings={headings} />
    </aside>
  </article>
</BaseLayout>
